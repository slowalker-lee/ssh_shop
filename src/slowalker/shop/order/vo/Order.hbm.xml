<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class  name="slowalker.shop.order.vo.Order" table="orders">
		<id name="oid">
			<generator class="native"/>
		</id>
		<property name="total"/>
		<property name="ordertime"/>
		<property name="state"/>
		<property name="name"/>
		<property name="addr"/>
		<property name="phone"/>
		
		<!-- user -->
		<many-to-one name="user" class="slowalker.shop.user.vo.User" column="uid" lazy="false"/>
		
		<!-- 订单和订单项之间的关系 -->
		<set name="orderItems" cascade="save-update">
			<key column="uid"/>
			<one-to-many class="slowalker.shop.order.vo.OrderItem"/>
		</set>
	</class>
</hibernate-mapping>